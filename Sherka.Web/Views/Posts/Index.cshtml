@model IEnumerable<PostViewModel>
@{
	ViewData["Title"] = "Posts";
}

@section Styles{
	<link rel="stylesheet" href="~/assets/Plugins/datatables/datatables.bundle.css" />
	<link rel="shortcut icon" type="image/x-icon" href="~/images/sitelogos/@ViewData["Logo"]" />

}

	<div class="alert bg-light-primary border border-primary d-flex flex-column flex-sm-row w-100 py-5 px-7 justify-content-between mb-10">
		<div class="d-flex align-items-center">
			<!--begin::Icon-->
			<!--begin::Svg Icon | path: icons/duotune/files/fil024.svg-->
			<span class="svg-icon svg-icon-2 svg-icon-primary me-2">
				<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
					<path opacity="0.3" d="M20 3H4C2.89543 3 2 3.89543 2 5V16C2 17.1046 2.89543 18 4 18H4.5C5.05228 18 5.5 18.4477 5.5 19V21.5052C5.5 22.1441 6.21212 22.5253 6.74376 22.1708L11.4885 19.0077C12.4741 18.3506 13.6321 18 14.8167 18H20C21.1046 18 22 17.1046 22 16V5C22 3.89543 21.1046 3 20 3Z" fill="black"></path>
					<rect x="6" y="12" width="7" height="2" rx="1" fill="black"></rect>
					<rect x="6" y="7" width="12" height="2" rx="1" fill="black"></rect>
				</svg>
			</span>
			<!--end::Svg Icon-->
			<!--end::Icon-->
			<!--begin::Content-->
			<div class="d-flex flex-column pe-0 pe-sm-10">
				<h5 class="mb-1">Posts</h5>
			</div>
			<!--end::Content-->
		</div>
		<!--begin::Add-->
		<a asp-action="Create" type="button" class="btn btn-sm btn-primary">

			<i class="bi bi-plus-circle"></i> Add
		</a>
		<!--end::Add-->
	</div>



	<div class="card shadow-sm">
		<partial name="_DataTableCardHeader" />
		<div class="card-body pt-0">
			<div class="table-responsive">
				<table class="table table-striped gy-7 gs-7 js-data-table" data-document-title="Posts">
					<thead>
						<tr class="fw-semibold fs-6 text-gray-800 border-bottom border-gray-200">
							<th>Title</th>
							<th>Created At</th>
							<th>SEO Title</th>
							<th class="js-no-export">Action</th>
						</tr>
					</thead>
					<tbody>
					@if (Model is not null)
					{
						@foreach (var post in Model)
						{
							<partial name="_PostTableRow" model="@post" />
						}
					}
				</tbody>
			</table>
		</div>
	</div>
</div>


@section Plugins{
	<script src="~/assets/Plugins/datatables/datatables.bundle.js"></script>
}
